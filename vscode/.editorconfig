# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*md]
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{js,html,vue}]
indent_size = 2
tab_width = 2
